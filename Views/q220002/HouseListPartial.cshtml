                        buttonSettings.ClientSideEvents.Click = string.Format("function(s, e) {{ contact('{0}','{1}','{2}'); }}", DataBinder.Eval(c.DataItem, "HID"), DataBinder.Eval(c.DataItem, "진행상태"), DataBinder.Eval(c.DataItem, "조사구일련번호"));
