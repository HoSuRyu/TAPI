                            </tr>
                            <tr>
                                <td class="td_th txt_center">주소</td>
                                <td>@(ViewBag.주소)</td>
                            </tr>
                            <tr>
                                <td class="td_th txt_center">단지명</td>
                                <td>@(ViewBag.단지명)</td>
                            </tr>
                            <tr>
