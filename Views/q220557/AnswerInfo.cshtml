                return;
            }
            if (phone != '') {

                phone = phone + '-' + $("#phone2").val() + '-' + $("#phone3").val();
                //if ( isCellPhone(phone) == false) {
                //    $("#phone2").focus();
                //    alert('유효한 휴대 전화 번호를 입력 해 주세요.');
                //    return;
                //}
